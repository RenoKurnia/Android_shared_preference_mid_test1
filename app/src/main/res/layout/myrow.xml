<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="81dp"
        android:layout_height="81dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/gambar" />

    <TextView
        android:text="Pegirim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sender"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/gambar"
        android:layout_toEndOf="@+id/gambar"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <TextView
        android:text="Isi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content"
        android:layout_alignBottom="@+id/gambar"
        android:layout_alignLeft="@+id/sender"
        android:layout_alignStart="@+id/sender" />

    <TextView
        android:text="Tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sender"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/date" />
</RelativeLayout>